<?xml version='1.0' encoding='utf-8' ?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fragments="http://schemas.android.com/apk/res-auto"
    android:id="@+id/folder_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1.5dp"
    fragments:cardCornerRadius="5.0dp"
    fragments:cardElevation="5.0dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="60.0dp"
            android:layout_height="60.0dp"
            android:contentDescription="@string/image_description"
            android:src="@drawable/folder_icon" />

        <TextView
            android:id="@+id/fileTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5.0dp"
            android:layout_marginEnd="5.0dp"
            android:text="@string/folder_name"
            android:textSize="20.0sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>