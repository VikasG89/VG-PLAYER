<?xml version='1.0' encoding='utf-8' ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fragments="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".videos.VideoFilesActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewVideo_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:queryHint="Search Video"
        android:visibility="gone"
        android:searchIcon="@drawable/search_icon"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        fragments:layout_constraintBottom_toTopOf="@id/videoFiles_RV" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/videoFiles_RV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_1"
        fragments:layout_constraintBottom_toBottomOf="parent"
        fragments:layout_constraintEnd_toEndOf="parent"
        fragments:layout_constraintHorizontal_bias="0.5"
        fragments:layout_constraintStart_toStartOf="parent"
        fragments:layout_constraintTop_toBottomOf="@+id/searchViewVideo_files" />
</androidx.constraintlayout.widget.ConstraintLayout>